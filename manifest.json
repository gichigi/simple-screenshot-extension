{
  "manifest_version": 3,
  "name": "Simple Screenshot",
  "version": "1.0",
  "description": "Take screenshots of the current tab and save them to Downloads",
  "permissions": ["activeTab", "downloads"],
  "action": {
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
